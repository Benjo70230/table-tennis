{
  "name": "hugo-template",
  "version": "1.1.0",
  "description": "Template project for sites built with Hugo & Netlify",
  "main": "index.js",
  "scripts": {
    "dev": "hugo server",
    "build": "hugo",
    "build-css": "npx tailwindcss build assets/styles/main.css -o styles/main.css",
    "build-css-prod": "cross-env NODE_ENV=production npx tailwindcss build assets/styles/main.css -o assets/css/styles.css",
    "dev-css": "npm run build-css && npm run dev",
    "lint": "eslint . && npx stylelint 'assets/styles/*.css'",
    "htmlhint": "npx htmlhint 'public/*.html' 'public/**/*.html'",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mthit/dzbugojno.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mthit/dzbugojno/issues"
  },
  "homepage": "https://github.com/mthit/dzbugojno#readme",
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "@namics/stylelint-bem": "^6.3.1",
    "autoprefixer": "^10.2.0",
    "cssnano": "^4.1.10",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "html-validate": "^3.5.0",
    "postcss": "^8.2.1",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.0",
    "purgecss": "^1.4.0",
    "stylelint": "^13.8.0",
    "stylelint-config-standard": "^19.0.0",
    "stylelint-scss": "^3.18.0"
  },
  "dependencies": {
    "lozad": "^1.16.0",
    "swiper": "^6.4.5",
    "tailwindcss": "^2.0.2"
  }
}
